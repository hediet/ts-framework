{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": true,
		"removeComments": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"alwaysStrict": true,
		"sourceMap": true,
		"outDir": "api"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"exclude": []
}
